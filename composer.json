{
    "name": "prooph/prooph-service-bus-module",
    "description": "Zend Framework 2 Module for ProophServiceBus",
    "type": "library",
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/prooph/ProophServiceBusModule",
    "authors": [
        {
            "name": "Alexander Miertsch",
            "email": "contact@prooph.de",
            "homepage": "http://www.prooph.de/"
        }
    ],
    "keywords": [
        "php",
        "ServiceBus",
        "CQRS",
        "DDD",
        "prooph",
        "zf2"
    ],
    "require": {
        "php": ">=5.4",
        "prooph/service-bus" : "~1.1",
        "zendframework/zend-loader" : "~2.3",
        "zendframework/zend-servicemanager" : "~2.3",
        "zendframework/zend-modulemanager" : "~2.3",
        "zendframework/zend-mvc" : "~2.3",
        "zendframework/zend-serializer" : "~2.3"

    },
    "suggest": {
        "prooph/prooph-event-store-module": "Use ProophEventStore within your ZF2 project"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "zendframework/zend-form" : "~2.3",
        "zendframework/zend-view" : "~2.3",
        "zendframework/zend-log" : "~2.3",
        "zendframework/zend-config" : "~2.3"
    },
    "autoload": {
        "psr-0": { 
            "ProophServiceBusModule\\": "src/",
            "ProophServiceBusModuleTest\\": "tests/"
        }
    }
}
